<html>
    <head>
        <title>Walk ins Welcome</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href='/'>Activities</a>
                <a class="navbar-brand" href='/businesses'>Businesses</a>
                <a class="navbar-brand" href='/userhome'>User Login</a>
                <a class="navbar-brand" href='/businesshome'>Business Login</a>
            </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            </div>
        </div>
        </nav>
        <div = class='containter'>
            <h1>Activities</h1>

            {% if activities is not empty %}
                <p> Here are the activities to go do: </p>
                <ul>
                    {% for activity in activities %}
                        <li><a href="/activity/{{ activity.getId }}">{{ activity.getActivityName }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>There are no activities today</p>
            {% endif %}

            <h3>Update an Activity</h3>
                <form action='/updateactivity/{{ activity.getId }}' method='post'>
                    <input name="_method" type="hidden" value="patch">

                    <label for='activity_name'>activity name</label>
                    <input id='activity_name' name='activity_name' type='text'>
                        <br>
                    <label for='activity_date'>activity date</label>
                    <input id='activity_date' name='activity_date' type='text'>
                        <br>
                    <label for='activity_location'>activity location</label>
                    <input id='activity_location' name='activity_location' type='text'>
                        <br>
                    <label for='activity_description'>activity description</label>
                    <input id='activity_description' name='activity_description' type='text'>
                        <br>
                    <label for='activity_price'>activity price</label>
                    <input id='activity_price' name='activity_price' type='text'>
                        <br>
                    <label for='activity_quantity'>activity location email</label>
                    <input id='activity_quantity' name='activity_quantity' type='text'>
                        <br>
                    <button type='submit'>Add activity</button>
                </form>
            </div>
    </body>
</html>
